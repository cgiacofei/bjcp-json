{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "BJCP Style Data",
  "type": "object",
  "properties": {
    "beerjson": {
      "type": "object",
      "properties": {
        "version": {
          "type": "number"
        },
        "styles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "category": {
                "type": "string"
              },
              "category_id": {
                "type": "string"
              },
              "style_id": {
                "type": "string"
              },
              "category_description": {
                "type": "string"
              },
              "overall_impression": {
                "type": "string"
              },
              "aroma": {
                "type": "string"
              },
              "appearance": {
                "type": "string"
              },
              "flavor": {
                "type": "string"
              },
              "mouthfeel": {
                "type": "string"
              },
              "comments": {
                "type": "string"
              },
              "history": {
                "type": "string"
              },
              "style_comparison": {
                "type": "string"
              },
              "tags": {
                "type": "string"
              },
              "original_gravity": {
                "type": "object",
                "properties": {
                  "minimum": {
                    "$ref": "#/definitions/unitValue"
                  },
                  "maximum": {
                    "$ref": "#/definitions/unitValue"
                  }
                },
                "required": [
                  "maximum",
                  "minimum"
                ]
              },
              "international_bitterness_units": {
                "type": "object",
                "properties": {
                  "minimum": {
                    "$ref": "#/definitions/unitValue"
                  },
                  "maximum": {
                    "$ref": "#/definitions/unitValue"
                  }
                },
                "required": [
                  "maximum",
                  "minimum"
                ]
              },
              "final_gravity": {
                "type": "object",
                "properties": {
                  "minimum": {
                    "$ref": "#/definitions/unitValue"
                  },
                  "maximum": {
                    "$ref": "#/definitions/unitValue"
                  }
                },
                "required": [
                  "maximum",
                  "minimum"
                ]
              },
              "alcohol_by_volume": {
                "type": "object",
                "properties": {
                  "minimum": {
                    "$ref": "#/definitions/unitValue"
                  },
                  "maximum": {
                    "$ref": "#/definitions/unitValue"
                  }
                },
                "required": [
                  "maximum",
                  "minimum"
                ]
              },
              "color": {
                "type": "object",
                "properties": {
                  "minimum": {
                    "$ref": "#/definitions/unitValue"
                  },
                  "maximum": {
                    "$ref": "#/definitions/unitValue"
                  }
                },
                "required": [
                  "maximum",
                  "minimum"
                ]
              },
              "ingredients": {
                "type": "string"
              },
              "examples": {
                "type": "string"
              },
              "style_guide": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "oneOf": [
              {"required": ["vital_statistics"]},
              {"required": [
                "alcohol_by_volume",
                "original_gravity",
                "final_gravity",
                "international_bitterness_units",
                "color"
              ]}
            ],
            "required": [
              "appearance",
              "aroma",
              "category",
              "category_id",
              "comments",
              "flavor",
              "history",
              "mouthfeel",
              "name",
              "overall_impression",
              "style_guide",
              "style_id",
              "tags",
              "type"
            ]
          },
          "minItems": 0
        }
      },
      "required": [
        "styles",
        "version"
      ]
    }
  },
  "required": [
    "beerjson"
  ],
  "definitions": {
    "unitValue": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      },
      "required": [
        "unit",
        "value"
      ]
    }
  }
}